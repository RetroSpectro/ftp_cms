doctype html
html(lang='en')
  include ../common/head.pug
  +head("CMS FTP")
  body
    header
    include ../common/navbar.pug 
    +navbar(user)
    .container
      h1= title
          .modal(tabindex='-1' role='dialog')
            .modal-dialog.modal-lg(role='document')
              .modal-content
                .modal-header
                  h5.modal-title #{filename}
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                .modal-footer
                  button.btn.btn-primary(type='button') Save changes
                  button.btn.btn-secondary(id="close" type='button' data-dismiss='modal') Close
          
      if dirs
            for dir in dirs
              if(dir.type==2)
                .media
                    a(href="/dirs/"+dir.name).text-decoration-none.text-dark
                        img.mr-1(src='/images/images.png' alt=dir.name)
                        .media-body
                            h5.mt-0 #{dir.name}
                            | #{dir.rawModifiedAt} 
                            p.text-primary #{dir.user} 
                            p.text-info #{dir.role }
              if(dir.type==1)
                  .media
                        input.mr-1(type="image" src='/images/png/txt.png' style="width:200px;height:200px"  alt=dir.name name="submit" value=dir.name)
                        .media-body
                            h5.mt-0 #{dir.name}
                            | #{dir.rawModifiedAt} 
                            p.text-primary #{dir.user} 
                            p.text-info #{dir.role }
      if dirs.length==0
        h1 Нет рабочих папок                      
  include ../common/footer.pug
  +footer()
  script(src="/javascripts/content.js")